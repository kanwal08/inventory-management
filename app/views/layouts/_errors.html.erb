<% if obj.errors.any? %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2" style="color:red">
            <h3>
                <%= pluralize(obj.errors.count, "error") %>
                    prohibited this article from being saved:
            </h3>
        <div>
            <ul>  
                <% obj.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li> 
                <% end %>
            </ul>
        </div>
    </div>
<% end %>